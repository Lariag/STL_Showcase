<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
  <variable name="myvar" value="myvalue"/>

  <!--
  See https://github.com/nlog/nlog/wiki/Configuration-file
  for information on customizing logging rules and outputs.
   -->
  <targets>

    <!--
    add your targets here
    See https://github.com/nlog/NLog/wiki/Targets for possible targets.
    See https://github.com/nlog/NLog/wiki/Layout-Renderers for the possible layout renderers.
    -->
    <target xsi:type="Null" name="AllFileLog"/>
    <!--fileName="${basedir}/logs/allLogs.csv" layout="${longdate}; ${uppercase:${level}}; ${message}; ${all-event-properties}; ${callsite} (${callsite-linenumber}); ${exception:format=ShortType} ${exception:format=message} " /> -->
    <target xsi:type="Null" name="CacheLogFile"/>
    <!-- fileName="${basedir}/logs/cache.csv" layout="${longdate}; ${uppercase:${level}}; ${message}; ${all-event-properties}; ${callsite} (${callsite-linenumber}); ${exception:format=ShortType} ${exception:format=message}  " /> -->
    <target xsi:type="Null" name="RenderLogFile"/>
    <!--fileName="${basedir}/logs/render.csv" layout="${longdate}; ${uppercase:${level}}; ${message}; ${all-event-properties}; ${callsite} (${callsite-linenumber}); ${exception:format=ShortType} ${exception:format=message}  " /> -->
    <target xsi:type="Null" name="SettingsLogFile"/>
    <!--fileName="${basedir}/logs/settings.csv" layout="${longdate}; ${uppercase:${level}}; ${message}; ${all-event-properties}; ${callsite} (${callsite-linenumber}); ${exception:format=ShortType} ${exception:format=message}  " /> -->
    <target xsi:type="Null" name="GeneralLogFile"/>
    <!-- fileName="${basedir}/logs/general.csv" layout="${longdate}; ${uppercase:${level}}; ${message}; ${all-event-properties}; ${callsite} (${callsite-linenumber})" /> -->
    <target xsi:type="Null" name="MainLogFile"/>
    <!-- fileName="${basedir}/logs/main.csv" layout="${longdate}; ${uppercase:${level}}; ${message}; ${all-event-properties}; ${callsite} (${callsite-linenumber})" /> -->
  </targets>

  <rules>
    <!-- add your logging rules here -->

    <!--
    Write all events with minimal level of Debug (So Debug, Info, Warn, Error and Fatal, but not Trace)  to "f"-->
    <logger name="*" minlevel="Trace" writeTo="AllFileLog" />
    <logger name="*" minlevel="Info" writeTo="GeneralLogFile" />
    <logger name="Cache" minlevel="Trace" writeTo="CacheLogFile" />
    <logger name="Render" minlevel="Trace" writeTo="RenderLogFile" />
    <logger name="Settings" minlevel="Trace" writeTo="SettingsLogFile" />
    <logger name="Main" minlevel="Trace" writeTo="MainLogFile" />

  </rules>
</nlog>
